{% extends 'base.html.twig' %}

{% block title %}Improper Access Control{% endblock %}

{% block body %}
    <h3 class="header">My Purchase #{{ purchase.id }}</h3>
    <table>
        <tr>
            <th>Id</th>
            <th>User Id</th>
            <th>Purchase amount</th>
        </tr>
        <tr>
            <td>{{ purchase.id }}</td>
            <td>{{ purchase.user.id }}</td>
            <td>${{ purchase.amount }}</td>
        </tr>
    </table>

    <h3 class="header">Code</h3>
    {{ hl.hl(code)|raw }}

    <h3 class="header">Links</h3>

    <div class="collection">
        <a href="{{ path('acl', { purchaseId: 1 }) }}" class="collection-item">Example</a>
        <a href="{{ path('acl', { purchaseId: 5 }) }}" class="collection-item">Exploit: another user's purchase id</a>
        <a href="{{ path('acl_fixed', { purchaseId: 5 }) }}" class="collection-item">Fixed</a>
    </div>
{% endblock %}
