{% extends 'base.html.twig' %}

{% block title %}External XML Entities{% endblock %}

{% block body %}
    <h3 class="header">Product: {{ product.name|raw }}</h3>
    <table>
        <tr>
            <th>Id</th>
            <th>Product name</th>
        </tr>
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name|raw }}</td>
        </tr>
    </table>

    <h3 class="header">Code</h3>
    {{ hl.hl(code)|raw }}
    {% if fileContent is defined %}
        {{ hl.hl(fileContent)|raw }}
    {% endif %}

    <h3 class="header">Links</h3>

    <div class="collection">
        <a href="{{ path('xxe_remote1') }}" class="collection-item">Exploit: remote value</a>
        <a href="{{ path('xxe_remote2') }}" class="collection-item">Exploit: remote XSS</a>
        <a href="{{ path('xxe_filesystem') }}" class="collection-item">Exploit: read files</a>
    </div>
{% endblock %}
